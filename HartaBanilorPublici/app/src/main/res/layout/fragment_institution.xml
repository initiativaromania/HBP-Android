<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_institution_layout"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instit_card_layout">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/piCardView"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin_bottom"
            android:elevation="@dimen/card_elevation"
            card_view:cardElevation="@dimen/card_c_elevation"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true"
            android:dividerHeight="@dimen/dividerHeight"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:divider="@android:color/transparent"
            card_view:cardCornerRadius="@dimen/cardCornerRadius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeInstitution"
                tools:context="initiativaromania.hartabanilorpublici.ui.InstitutionFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:onClick="expandableButton1"
                    android:orientation="horizontal"
                    android:id="@+id/layoutPIName"
                    android:paddingBottom="5dp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="4"
                        app:srcCompat="@drawable/pi75" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/institutionName"
                        android:textColor="#ff000000"
                        android:textSize="18dp"
                        android:text="" />

                    <ImageView
                        android:id="@+id/arrow_instit"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_weight="4"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/up"/>

                </LinearLayout>


                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutPIName"
                    android:background="#FFFFFF"
                    app:ael_duration="400"
                    app:ael_expanded="true"
                    app:ael_interpolator="fastOutSlowIn"
                    app:ael_orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:orientation="vertical"
                        android:paddingBottom="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="12dp"
                                android:text="Adresă" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textColor="#000000"
                                android:textSize="13dp"
                                android:id="@+id/piAddress"
                                android:text="-">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:paddingRight="0dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:text="Achiziții directe" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textSize="13dp"
                                    android:textColor="#000000"
                                    android:id="@+id/nrDirectAcquisitions"
                                    android:text="0" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="15dp"
                                android:id="@+id/piContracts"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textSize="12dp"
                                    android:text="Licitații" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:textSize="13dp"
                                    android:textColor="#000000"
                                    android:id="@+id/nrTenders"
                                    android:text="0" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_below="@id/piContracts"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="CUI" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="#000000"
                                android:id="@+id/piCUI"
                                android:text="1" />

                        </LinearLayout>

                    </LinearLayout>
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>





    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_below="@+id/instit_card_layout"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/entity_info_fragment"
            android:name="initiativaromania.hartabanilorpublici.ui.TabbedViewPageFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".IRUserInterface.activities.ContractActivity" />

    </FrameLayout>

</RelativeLayout>
